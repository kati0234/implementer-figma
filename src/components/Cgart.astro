<div class="cgart-box">
  <div class="bg">
    <div class="parent" style="--percent: 85%">
      <div class="child"></div>
      <p class="center-text">85%</p>
    </div>
    <p class="description">consisgency</p>
  </div>
  <div class="bg">
    <div class="parent" style="--percent: 95%">
      <div class="child"></div>
      <p class="center-text">95%</p>
    </div>
    <p class="description">Improvement</p>
  </div>
  <div class="bg">
    <div class="parent" style="--percent: 90%">
      <div class="child"></div>
      <p class="center-text">90%</p>
    </div>
    <p class="description">Branching</p>
  </div>
</div>

<style>
  @property --percent {
    syntax: "<percentage>";
    inherits: true;
    initial-value: 0%;
  }
  .cgart-box {
    display: flex;
    gap: 1.625rem;
    flex-wrap: wrap;
  }
  .bg {
    background: var(--cgart-bg);
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 1rem;
  }
  .parent {
    --offset-pos: 5px;
    animation: --pie 5s linear infinite;
    border: var(--offset-pos) solid transparent;
    background:
      linear-gradient(var(--cgart-bg), var(--cgart-bg)) padding-box,
      conic-gradient(
          var(--cgart-border-fill) var(--percent),
          var(--cgart-border-fill-bg) 0
        )
        border-box;
    position: relative;
    align-content: center;
    text-align: center;

    .child {
      aspect-ratio: 1;
      border-radius: 99px;
      width: 20px;
      background: var(--cgart-border-fill);
      position: absolute;
      offset-path: border-box;
      offset-distance: var(--percent);
      offset-anchor: 50% calc(50% - var(--offset-pos) / 2);
    }
  }

  /* @keyframes --pie {
    to {
      --percent: 100%;
    }
  } */
  @keyframes --pie {
    from {
      --percent: 0%;
    }
  }

  .parent {
    aspect-ratio: 1;
    width: 150px;
    border-radius: 1e5px;
    margin-inline: auto;
  }
  .description {
    font-size: var(--cgart-decription-size);
  }

  .center-text {
    font-size: var(--cgart-center-size);
  }
</style>
