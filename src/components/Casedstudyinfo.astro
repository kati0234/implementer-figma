---
import Button from "./Button.astro";
import { Image } from "astro:assets";

import Computer from "../assets/images/casestudyimg.png";
---

<section>
  <Image src={Computer} alt="/" />
  <div class="container">
    <dl>
      <div>
        <dt>Case Name</dt>
        <dd>Taxes & Efficiency</dd>
      </div>
      <div>
        <dt>Category</dt>
        <dd>Business</dd>
      </div>
      <div>
        <dt>Date</dt>
        <dd>27th September 2022</dd>
      </div>
    </dl>
    <div>
      <Button theme="secondary-fat"> Live Preview</Button>
    </div>
  </div>
</section>
<style>
  img {
    border-radius: 1.875rem;
    grid-column: 1;
    grid-row: 1 / span 2;
  }
  section {
    margin-top: 6rem;
    display: grid;
    grid-template-rows: 1fr auto auto;
    grid-template-columns: 1fr;
  }
  dl {
    display: flex;
    flex-wrap: wrap;
    gap: 3rem;
    color: #fff;

    dt {
      font-weight: 600;
    }
  }
  .container {
    display: flex;
    flex-wrap: wrap;
    gap: 3rem;
    align-items: center;
    justify-content: space-between;
    background-color: var(--sort-3);
    padding: 3.3125rem 3.75rem;
    border-radius: 1.875rem;
    grid-column: 1;
    grid-row: 2 /-1;
    margin: 0 6rem;
  }
</style>
