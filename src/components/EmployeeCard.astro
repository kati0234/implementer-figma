---
import type { ImageMetadata } from "astro";
import { Image } from "astro:assets";
import { Icon } from "astro-icon/components";

const { img, name, title, description } = Astro.props;
const images = import.meta.glob<{ default: ImageMetadata }>(
  "/src/assets/images/*.{jpeg,jpg,png,gif}"
);
if (!images[img])
  throw new Error(
    `"${img}" does not exist in glob: "src/assets/images/*.{jpeg,jpg,png,gif}"`
  );
---

<article view-transition-name="employee-card-{name}">
  <a href=" /singel" class="card-link">
    <figure class="employee-img">
      <Image src={images[img]()} alt={name} width={300} />
      <p class="title">
        {title}
      </p>
    </figure>
    <div class="content flow">
      <h3>{name}</h3>
      <p>{description}</p>
      <div class="social">
        <Icon name="instagram" />
        <Icon name="facebook" />
        <Icon name="twitter" />
      </div>
    </div>
  </a>
</article>
<style>
  .employee-card {
    transition: transform 0.3s;
  }

  ::view-transition-old(employee-card-{name}) {
    animation: fade-out 0.5s both;
  }

  ::view-transition-new(employee-card-{name}) {
    animation: fade-in 0.5s both;
  }

  @keyframes fade-in {
    from {
      opacity: 0;
    }
    to {
      opacity: 1;
    }
  }

  @keyframes fade-out {
    from {
      opacity: 1;
    }
    to {
      opacity: 0;
    }
  }

  img {
    border-radius: 1rem;
  }
  figure {
    display: grid;

    > * {
      grid-area: 1/1;
    }
    .title {
      border-radius: 1.8125rem;
      place-self: end;
      background: yellow;
      background: #ffcc4a;
      padding: 0.25rem 1.3125rem;
      margin: 2rem;

      &:hover {
        background: #4aff89;
      }
    }
  }

  [data-icon] {
    width: 1.50038rem;
    height: 1.44381rem;
  }
  .social {
    display: flex;
    align-items: center;
    gap: 1.8125rem;
  }
  .content {
    display: grid;
    justify-items: center;
    text-align: center;
  }
  h3 {
    font-family: "cabin";
    color: var(--heding-text-color);
    font-size: var(--fluid-14-30);
    font-weight: 600;
    line-height: 1.3;
  }
</style>

