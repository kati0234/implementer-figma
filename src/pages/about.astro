---
const employeeData = await fetch(
  "https://raw.githubusercontent.com/kati0234/frontend-design/main/resources/json/employees.json"
).then((res) => res.json());
const firsttree = employeeData.slice(0, 3);
const corevalueData = await fetch(
  "https://raw.githubusercontent.com/kati0234/frontend-design/main/resources/json/corevalues.json"
).then((res) => res.json());

console.log(Array.isArray(corevalueData));
import CorevalueSection from "../components/CorevalueSection.astro";
import BaseLayout from "../layouts/BaseLayout.astro";
import Accordian from "../components/Accordian.astro";
import Hero from "../components/Hero.astro";
import EmployeeSection from "../components/EmployeeSection.astro";
import Fitstsection from "../components/Fitstsection.astro";
---

<BaseLayout title="about">
  <Hero
    bgimg="url(/images/about-hero.png)"
    side="services"
    title="Creative Services For Boost Your Business Growth"
  />
  <Fitstsection />

  <CorevalueSection data={corevalueData} theme="light" />
  <EmployeeSection data={firsttree} />
  <Accordian />
</BaseLayout>
<style>
  .flex {
    display: flex;
    gap: 7.625rem;
  }
  [data-icon] {
    width: 1.50038rem;
    height: 1.44381rem;
  }
</style>
