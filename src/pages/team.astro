---
const employeeData = await fetch(
  "https://raw.githubusercontent.com/kati0234/frontend-design/main/resources/json/employees.json"
).then((res) => res.json());

import EmployeeSection from "../components/EmployeeSection.astro";
import { Image } from "astro:assets";

import Knap from "../components/Button.astro";
import Cgart from "../components/Cgart.astro";
import BaseLayout from "../layouts/BaseLayout.astro";
import john from "../assets/images/john.jpg";
import EmployeeCard from "../components/EmployeeCard.astro";
import Hero from "../components/Hero.astro";
import Button from "../components/Button.astro";
---

<BaseLayout title="home">
  <Hero bgimg="url(/images/team-hero.png)" />
  <div>
    <div class="grid">
      <div>
        <h2>Meet Our Great Team</h2>
        <p>
          Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do
          eiusmod tempor incididunt ut labore et dolore magna aliqua. enim ad
          minim veniam, quis nostrud exercitation.
        </p>
      </div>
      <Button variant="primary" class="button-grid"> Join our team</Button>
    </div>
  </div>

  <EmployeeSection data={employeeData} />
</BaseLayout>

<style>
  h1 {
    font-family: "Lato", sans-serif;
